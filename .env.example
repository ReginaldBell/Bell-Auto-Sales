# ======================
# Bell Auto Sales - Environment Variables
# ======================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# Server
NODE_ENV=development
PORT=8080

# Admin Authentication (REQUIRED in production)
ADMIN_PASSWORD=your-secure-password-here
SESSION_SECRET=your-random-64-char-session-secret

# Email Notifications (Nodemailer)
# Recipient for contact form submissions
CONTACT_TO=bellboys08@yahoo.com

# Yahoo SMTP Settings (defaults shown)
SMTP_HOST=smtp.mail.yahoo.com
SMTP_PORT=465
SMTP_SECURE=true

# Your Yahoo account credentials
# IMPORTANT: Use an App Password, not your main password!
# Generate at: https://login.yahoo.com/account/security/app-passwords
SMTP_USER=your-yahoo-email@yahoo.com
SMTP_PASS=your-app-password

# Email Debug Mode (for testing without inbox access)
# Set to true to log: messageId, accepted/rejected, body preview
EMAIL_DEBUG=false

# Cloudinary Image Storage (REQUIRED for image uploads)
# Get these from your Cloudinary dashboard: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
CLOUDINARY_FOLDER=bs-auto-sales
